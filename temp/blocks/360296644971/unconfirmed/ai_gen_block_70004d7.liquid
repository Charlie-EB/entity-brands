{% doc %}
  @prompt
    Create a custom rich text section with two side-by-side text areas that can be independently customized. Each side should support rich text formatting and be responsive on mobile devices.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-dual-richtext-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-dual-richtext-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 {{ settings.spacing_grid_horizontal }}px;
  }

  .ai-dual-richtext-wrapper-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
    align-items: {{ block.settings.vertical_alignment }};
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} {
    padding: {{ block.settings.column_padding }}px;background-color: {{ block.settings.column_background_color }};
    border-radius: {{ block.settings.column_border_radius }}px;
    {% if block.settings.column_border_thickness > 0 %}
      border: {{ block.settings.column_border_thickness }}px solid {{ block.settings.column_border_color }};
    {% endif %}
  }

  .ai-dual-richtext-column-left-{{ ai_gen_id }} {
    text-align: {{ block.settings.left_text_alignment }};
    color: {{ block.settings.left_text_color }};
  }

  .ai-dual-richtext-column-right-{{ ai_gen_id }} {
    text-align: {{ block.settings.right_text_alignment }};
    color: {{ block.settings.right_text_color }};
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} h1,
  .ai-dual-richtext-column-{{ ai_gen_id }} h2,
  .ai-dual-richtext-column-{{ ai_gen_id }} h3,
  .ai-dual-richtext-column-{{ ai_gen_id }} h4,
  .ai-dual-richtext-column-{{ ai_gen_id }} h5,
  .ai-dual-richtext-column-{{ ai_gen_id }} h6 {
    margin: 0 0 1em 0;
    line-height: 1.3;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} p {
    margin: 0 0 1em 0;line-height: 1.6;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} ul,
  .ai-dual-richtext-column-{{ ai_gen_id }} ol {
    margin: 0 0 1em 0;
    padding-left: 1.5em;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} li {
    margin-bottom: 0.5em;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: underline;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} a:hover {
    opacity: 0.8;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} strong {
    font-weight: bold;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} em {
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-dual-richtext-wrapper-{{ ai_gen_id }} {
      grid-template-columns: 1fr;gap: {{ block.settings.mobile_column_gap }}px;
    }

    .ai-dual-richtext-column-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_column_padding }}px;
    }

    .ai-dual-richtext-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_section_padding }}px 0;
    }
  }
{% endstyle %}

<div class="ai-dual-richtext-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-dual-richtext-container-{{ ai_gen_id }}">
    <div class="ai-dual-richtext-wrapper-{{ ai_gen_id }}">
      <div class="ai-dual-richtext-column-{{ ai_gen_id }} ai-dual-richtext-column-left-{{ ai_gen_id }}">
        {% if block.settings.left_content != blank %}
          {{ block.settings.left_content }}
        {% else %}
          <p>Add your left column content here. You can use rich text formatting including <strong>bold</strong>, <em>italic</em>, and links.</p>
        {% endif %}
      </div>
      
      <div class="ai-dual-richtext-column-{{ ai_gen_id }} ai-dual-richtext-column-right-{{ ai_gen_id }}">
        {% if block.settings.right_content != blank %}
          {{ block.settings.right_content }}
        {% else %}
          <p>Add your right column content here. You can use rich text formatting including <strong>bold</strong>, <em>italic</em>, and links.</p>
        {% endif %}
      </div>
    </div>
  </div>
</div>

