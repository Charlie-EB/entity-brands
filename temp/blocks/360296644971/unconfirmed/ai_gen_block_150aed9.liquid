{% doc %}
  @prompt
    Create a custom rich text section with two side-by-side text areas that can be independently customized. Each side should support rich text formatting and be responsive on mobile devices., this block should be a section instead.
    and each content should also have a button that is a link (and i can edit and pass in the link)

{% enddoc %}
{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .ai-dual-richtext-{{ ai_gen_id }} {
    padding: {{ section.settings.section_padding }}px 0;
    background-color: {{ section.settings.background_color }};
  }

  .ai-dual-richtext-container-{{ ai_gen_id }} {
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 {{ settings.spacing_grid_horizontal }}px;
  }

  .ai-dual-richtext-wrapper-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ section.settings.column_gap }}px;
    align-items: {{ section.settings.vertical_alignment }};
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} {
    padding: {{ section.settings.column_padding }}px;
    background-color: {{ section.settings.column_background_color }};
    border-radius: {{ section.settings.column_border_radius }}px;
    {% if section.settings.column_border_thickness > 0 %}
      border: {{ section.settings.column_border_thickness }}px solid {{ section.settings.column_border_color }};
    {% endif %}
  }

  .ai-dual-richtext-column-left-{{ ai_gen_id }} {
    text-align: {{ section.settings.left_text_alignment }};
    color: {{ section.settings.left_text_color }};
  }

  .ai-dual-richtext-column-right-{{ ai_gen_id }} {
    text-align: {{ section.settings.right_text_alignment }};
    color: {{ section.settings.right_text_color }};
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} h1,
  .ai-dual-richtext-column-{{ ai_gen_id }} h2,
  .ai-dual-richtext-column-{{ ai_gen_id }} h3,
  .ai-dual-richtext-column-{{ ai_gen_id }} h4,
  .ai-dual-richtext-column-{{ ai_gen_id }} h5,
  .ai-dual-richtext-column-{{ ai_gen_id }} h6 {
    margin: 0 0 1em 0;
    line-height: 1.3;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} p {
    margin: 0 0 1em 0;
    line-height: 1.6;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} ul,
  .ai-dual-richtext-column-{{ ai_gen_id }} ol {
    margin: 0 0 1em 0;
    padding-left: 1.5em;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} li {
    margin-bottom: 0.5em;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: underline;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} a:hover {
    opacity: 0.8;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} strong {
    font-weight: bold;
  }

  .ai-dual-richtext-column-{{ ai_gen_id }} em {
    font-style: italic;
  }

  .ai-dual-richtext-content-{{ ai_gen_id }} {
    margin-bottom: {{ section.settings.button_spacing }}px;
  }

  .ai-dual-richtext-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background-color: {{ section.settings.button_background_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    transition: all 0.3s ease;
    border: {{ section.settings.button_border_thickness }}px solid {{ section.settings.button_border_color }};
  }

  .ai-dual-richtext-button-{{ ai_gen_id }}:hover {
    background-color: {{ section.settings.button_hover_background_color }};
    color: {{ section.settings.button_hover_text_color }};
    border-color: {{ section.settings.button_hover_border_color }};
    text-decoration: none;opacity: 1;
  }

  .ai-dual-richtext-button-left-{{ ai_gen_id }} {
    {% if section.settings.left_text_alignment == 'center' %}
      margin: 0 auto;
    {% elsif section.settings.left_text_alignment == 'right' %}
      margin-left: auto;{% endif %}
  }

  .ai-dual-richtext-button-right-{{ ai_gen_id }} {
    {% if section.settings.right_text_alignment == 'center' %}
      margin: 0 auto;
    {% elsif section.settings.right_text_alignment == 'right' %}
      margin-left: auto;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-dual-richtext-wrapper-{{ ai_gen_id }} {
      grid-template-columns: 1fr;gap: {{ section.settings.mobile_column_gap }}px;
    }

    .ai-dual-richtext-column-{{ ai_gen_id }} {
      padding: {{ section.settings.mobile_column_padding }}px;
    }

    .ai-dual-richtext-{{ ai_gen_id }} {
      padding: {{ section.settings.mobile_section_padding }}px 0;
    }

    .ai-dual-richtext-content-{{ ai_gen_id }} {
      margin-bottom: {{ section.settings.mobile_button_spacing }}px;
    }

    .ai-dual-richtext-button-{{ ai_gen_id }} {
      padding: {{ section.settings.mobile_button_padding_vertical }}px {{ section.settings.mobile_button_padding_horizontal }}px;
      font-size: {{ section.settings.mobile_button_font_size }}px;
    }
  }
{% endstyle %}

<div class="ai-dual-richtext-{{ ai_gen_id }}">
  <div class="ai-dual-richtext-container-{{ ai_gen_id }}">
    <div class="ai-dual-richtext-wrapper-{{ ai_gen_id }}">
      <div class="ai-dual-richtext-column-{{ ai_gen_id }} ai-dual-richtext-column-left-{{ ai_gen_id }}">
        <div class="ai-dual-richtext-content-{{ ai_gen_id }}">
          {% if section.settings.left_content != blank %}
            {{ section.settings.left_content }}
          {% else %}
            <h2>Left Column</h2><p>Add your left column content here. You can use rich text formatting including<strong>bold</strong>, <em>italic</em>, and links.</p>
          {% endif %}
        </div>
        
        {% if section.settings.left_button_text != blank and section.settings.left_button_link != blank %}
          <a href="{{ section.settings.left_button_link }}" class="ai-dual-richtext-button-{{ ai_gen_id }} ai-dual-richtext-button-left-{{ ai_gen_id }}">
            {{ section.settings.left_button_text }}
          </a>
        {% endif %}
      </div>
      
      <div class="ai-dual-richtext-column-{{ ai_gen_id }} ai-dual-richtext-column-right-{{ ai_gen_id }}">
        <div class="ai-dual-richtext-content-{{ ai_gen_id }}">
          {% if section.settings.right_content != blank %}
            {{ section.settings.right_content }}
          {% else %}
            <h2>Right Column</h2>
            <p>Add your right column content here. You can format this text independently from the left column.</p>
          {% endif %}
        </div>
        
        {% if section.settings.right_button_text != blank and section.settings.right_button_link != blank %}
          <a href="{{ section.settings.right_button_link }}" class="ai-dual-richtext-button-{{ ai_gen_id }} ai-dual-richtext-button-right-{{ ai_gen_id }}">
            {{ section.settings.right_button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

