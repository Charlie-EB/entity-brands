    #Banner-{{ section.id }}.home-banner .banner__box {
      max-width: calc(1395px + 10%);
    }
    #Banner-{{ section.id }}.home-banner .banner__box {
      max-width: 100%;
    }
    #Banner-{{ section.id }}.home-banner .banner__box {
      height: 100%;
      display: flex;
      flex-wrap: wrap;
      align-content: center;
      width: 100%;
    }
    #Banner-{{ section.id }}.home-banner .button--secondary {
      color: #040707;
      background-color: #fff;
    }
    #Banner-{{ section.id }}.home-banner .button.button--primary {
      background: #e96c24;
      color: #f2f2f2;
    }
    #Banner-{{ section.id }}.home-banner .button {
      border-radius: 100px;
      height: 36px;
      min-width: 110px;
      font-size: 20px;
      padding: 0 20px;
      font-family: ITC Avant Garde Pro Md;
      font-weight: 500;
      line-height: 38.2px;
      transition: 0.3s ease all;
    }

    #Banner-{{ section.id }}.home-banner .button:before {
        content: attr(aria-label);
        position: unset;
        font-size: 20px;
        z-index: 1;
    }

    #Banner-{{ section.id }}.home-banner .button span {
        display: none
    }

    #Banner-{{ section.id }}.home-banner .button:after {
      display: none;
    }
    #Banner-{{ section.id }}.home-banner .banner__buttons .button:hover {
        filter: drop-shadow(1px 2px 3px black);
    }
    #Banner-{{ section.id }}.home-banner .banner__heading {
        color: #000;
        font-family: 'Kepler Std Light' !important;
        font-family: "kepler-std-condensed-subhead", serif !important;
        font-size: 90px;
        font-weight: 300;
        line-height: 116.82px;
        text-align: left;
        width: 100%;
        margin-bottom: 60px;
    }

