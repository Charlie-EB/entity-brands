{% comment %} Section: Custom Image Slider - 3 images wide with autoplay {% endcomment %}
<div class="custom-image-slider">
  <div class="slider-wrapper">
    {% for block in section.blocks %}
      {% if block.settings.image %}
        <div class="slide">
          <img 
            src="{{ block.settings.image | image_url: width: 400, height: 400, crop: 'center' }}" 
            width="400" 
            height="400" 
            alt="{{ block.settings.image.alt | escape }}">
        </div>
      {% endif %}
    {% endfor %}
  </div>
  <button class="slider-prev">&#10094;</button>
  <button class="slider-next">&#10095;</button>
</div>

<style>
  .custom-image-slider {
    position: relative;
    width: 1200px; /* 3 images * 400px */
    overflow: hidden;
    margin: auto;
  }
  .slider-wrapper {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }
  .slide {
    min-width: 400px;
    flex-shrink: 0;
  }
  .slider-prev,
  .slider-next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(0,0,0,0.5);
    color: white;
    border: none;
    padding: 10px;
    cursor: pointer;
    z-index: 10;
  }
  .slider-prev { left: 0; }
  .slider-next { right: 0; }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const slider = document.querySelector('.slider-wrapper');
    const slides = document.querySelectorAll('.slide');
    const prevBtn = document.querySelector('.slider-prev');
    const nextBtn = document.querySelector('.slider-next');
    const totalSlides = slides.length;
    const visibleSlides = 3;
    let index = 0;

    function updateSlider() {
      // Calculate max index so we donâ€™t scroll beyond last full slide
      let maxIndex = totalSlides - visibleSlides;
      if (index > maxIndex) index = 0;
      if (index < 0) index = maxIndex;
      slider.style.transform = 'translateX(' + (-400 * index) + 'px)';
    }

    prevBtn.addEventListener('click', function() {
      index--;
      updateSlider();
      resetAutoScroll();
    });

    nextBtn.addEventListener('click', function() {
      index++;
      updateSlider();
      resetAutoScroll();
    });

    // Auto scroll every 3 seconds
    let autoScroll = setInterval(function() {
      index++;
      updateSlider();
    }, 3000);

    function resetAutoScroll() {
      clearInterval(autoScroll);
      autoScroll = setInterval(function() {
        index++;
        updateSlider();
      }, 3000);
    }

    // Initial update
    updateSlider();
  });
</script>

{% schema %}
{
  "name": "Custom Image Slider",
  "max_blocks": 10,
  "blocks": [
    {
      "type": "image_slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Image Slider",
      "category": "Media"
    }
  ]
}
{% endschema %}
