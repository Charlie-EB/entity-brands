{% comment %} Section: Custom Image Slider - smooth scroll, 3 images visible, 400x400 each {% endcomment %}
<div class="custom-slider-container">
  <div class="custom-slider-track">
    {% for block in section.blocks %}
      {% if block.settings.image %}
        <div class="custom-slide">
          <img 
            src="{{ block.settings.image | image_url: width: 400, height: 400, crop: 'center' }}" 
            width="400" 
            height="400" 
            alt="{{ block.settings.image.alt | escape }}">
        </div>
      {% endif %}
    {% endfor %}
    <!-- Duplicate for seamless scrolling -->
    {% for block in section.blocks %}
      {% if block.settings.image %}
        <div class="custom-slide">
          <img 
            src="{{ block.settings.image | image_url: width: 400, height: 400, crop: 'center' }}" 
            width="400" 
            height="400" 
            alt="{{ block.settings.image.alt | escape }}">
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  .custom-slider-container {
    width: 1240px; /* 3 images (400px) + 2 gaps (20px) = 1240px */
    overflow: hidden;
    margin: 0 auto;
    padding-bottom: 40px;
  }

  .custom-slider-track {
    display: flex;
    gap: 20px;
    animation: scrollLoop 40s linear infinite;
    width: max-content;
  }

  .custom-slide {
    flex: 0 0 auto;
    width: 400px;
    height: 400px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  @keyframes scrollLoop {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>

{% schema %}
{
  "name": "Custom Image Slider",
  "max_blocks": 10,
  "blocks": [
    {
      "type": "image_slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Image Slider",
      "category": "Media"
    }
  ]
}
{% endschema %}
