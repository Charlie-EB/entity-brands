{% doc %}
  @prompt
    Create two content boxes positioned side by side, each containing a customizable header, body text, and button. The boxes should be responsive and work well on both desktop and mobile devices., Make the font and styling match our website, Can you put an outline boarder around the boxes

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-content-boxes-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.padding }}px;
    max-width: 100%;
  }

  .ai-content-box-{{ ai_gen_id }} {
    background-color: {{ block.settings.box_background_color }};
    border: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
    border-radius: {{ settings.text_boxes_radius }}px;
    padding: {{ block.settings.box_padding }}px;
    text-align: {{ block.settings.text_alignment }};
    display: flex;
    flex-direction: column;
    height: 100%;box-shadow: {{ settings.text_boxes_shadow_horizontal_offset }}px {{ settings.text_boxes_shadow_vertical_offset }}px {{ settings.text_boxes_shadow_blur }}px rgba({{ settings.colors.default.settings.shadow.red }}, {{ settings.colors.default.settings.shadow.green }}, {{ settings.colors.default.settings.shadow.blue }}, {{ settings.text_boxes_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-content-box__header-{{ ai_gen_id }} {
    color: {{ block.settings.header_color }};
    font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
    font-style: {{ settings.type_header_font.style }};
    font-weight: {{ settings.type_header_font.weight }};
    font-size: calc({{ block.settings.header_size }}px * {{ settings.heading_scale | divided_by: 100.0 }});
    margin: 0 0 16px 0;
    line-height: 1.3;
  }

  .ai-content-box__body-{{ ai_gen_id }} {
    color: {{ block.settings.body_color }};
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-style: {{ settings.type_body_font.style }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: calc({{ block.settings.body_size }}px * {{ settings.body_scale | divided_by: 100.0 }});
    line-height: 1.5;
    margin: 0 0 24px 0;flex-grow: 1;
  }

  .ai-content-box__button-{{ ai_gen_id }} {
    display: inline-block;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    padding: 12px 24px;
    border: {{ settings.buttons_border_thickness }}px solid rgba({{ block.settings.button_background_color.red }}, {{ block.settings.button_background_color.green }}, {{ block.settings.button_background_color.blue }}, {{ settings.buttons_border_opacity | divided_by: 100.0 }});
    border-radius: {{ settings.buttons_radius }}px;
    text-decoration: none;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-style: {{ settings.type_body_font.style }};
    font-weight: {{ settings.type_body_font.weight }};
    font-size: calc({{ block.settings.button_font_size }}px * {{ settings.body_scale | divided_by: 100.0 }});
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: auto;
    align-self: flex-start;
    box-shadow: {{ settings.buttons_shadow_horizontal_offset }}px {{ settings.buttons_shadow_vertical_offset }}px {{ settings.buttons_shadow_blur }}px rgba({{ settings.colors.default.settings.shadow.red }}, {{ settings.colors.default.settings.shadow.green }}, {{ settings.colors.default.settings.shadow.blue }}, {{ settings.buttons_shadow_opacity | divided_by: 100.0 }});}

  .ai-content-box__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    border-color: rgba({{ block.settings.button_hover_color.red }}, {{ block.settings.button_hover_color.green }}, {{ block.settings.button_hover_color.blue }}, {{ settings.buttons_border_opacity | divided_by: 100.0 }});
  }

  {% if block.settings.text_alignment == 'center' %}
    .ai-content-box__button-{{ ai_gen_id }} {
      align-self: center;
    }
  {% elsif block.settings.text_alignment == 'right' %}
    .ai-content-box__button-{{ ai_gen_id }} {
      align-self: flex-end;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-content-boxes-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.gap | times: 0.75 }}px;padding: {{ block.settings.padding | times: 0.75 }}px;
    }

    .ai-content-box-{{ ai_gen_id }} {
      padding: {{ block.settings.box_padding | times: 0.8 }}px;
    }

    .ai-content-box__header-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.header_size | times: 0.9 }}px * {{ settings.heading_scale | divided_by: 100.0 }});
    }

    .ai-content-box__body-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.body_size | times: 0.95 }}px * {{ settings.body_scale | divided_by: 100.0 }});
    }
  }
{% endstyle %}

